@using MVCForum.Website.ViewModels
@model HotTopicsViewModel

@if (Model.Topics.Any())
{

    <div class="asside__news border">
        <div class="asside-news__title">
            <p>Tin nổi bật</p>
        </div>

        <div class="asside-news__items">
            @foreach (var item in Model.Topics)
            {
                <div class="asside-news__item">
                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    <a href="@Url.Action("Article","Topic", new { slug = item.Topic.Slug})">@item.Topic.Name</a>
                    <div class="asside-news__item-calendar">
                        <div class="medicine-news__item-text-tag medicine-news__item-small-text-tag">
                            <strong>@item.Topic.Category.Name</strong>
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <span>@DatesUI.GetPrettyDate(item.Topic.CreateDate.ToString())</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

}