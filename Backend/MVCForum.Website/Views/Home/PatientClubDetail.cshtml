@using MVCForum.Website.Application
@model MVCForum.Website.ViewModels.ActiveTopicsViewModel
@{
    ViewBag.Title = "Câu Lạc Bộ Bệnh Nhân";
    Layout = "~/Views/Shared/FrontEnd/_LayoutBenhvien.cshtml";
    var totalCount = Convert.ToInt32(Model.TotalCount);
    var catId = ViewBag.Category.Id;
}

<section class="patient-club intro pt-0 pb-3">
    <div class="container-fluid">
        <div class="row">
            <div class="banner-sub col-12">
                <div class="banner-sub__overlay"></div>
                <div class="container">
                    <div class="section__title section__title-page">
                        <h2 class="section__title-text">@ViewBag.Category.Name</h2>
                        <div class="section__title-icon"></div>
                    </div>
                </div>
            </div>
            <div class="container page-container">
                <div>
                    <nav aria-label="breadcrumb" class="breadcrumb-custom col-12">
                        <ol class="breadcrumb breadcrumb-custom-ol">
                            <li class="breadcrumb-item breadcrumb-custom-item"><a href="#"><i class="fa fa-home" aria-hidden="true"></i></a></li>
                            <li class="breadcrumb-item breadcrumb-custom-item"><a href="@Url.Action("CauLacBoBenhNhan","Home")">Câu Lạc Bộ Bệnh Nhân</a></li>
                            <li class="breadcrumb-item active breadcrumb-custom-item" aria-current="page">@ViewBag.Category.Name</li>
                        </ol>
                    </nav>
                </div>
                <div class="item__title">
                    <p>Giới thiệu câu lạc bộ</p>
                </div>
                <div class="tab__content-detail">
                    @Html.Raw(HttpUtility.HtmlDecode(ViewBag.Category.Description.Replace("\r\n", " ").Replace("&nbsp;","")))
          


                    @Html.Partial("_TablePatientClub", Model)

                </div>

                @if (Model.TotalPages > 1)
                {
                    @Html.Pager(Convert.ToInt32(Model.PageIndex), 10, totalCount, new {id = catId}, "PatientClubDetail", "Home")
                }
            </div>
        </div>
    </div>
</section>

