@model MVCForum.Website.ViewModels.ScientificResearchPageViewModel

@if (Model.Topics.Any())
{

    <div class="medicine-news__items category-news__items mt-3">
        <div class="row scrollLeft">
            @foreach (var topic in Model.Topics.OrderByDescending(x => x.CreateDate))
            {
                <div class="col-sm-4">
                    <div class="medicine-news__item category-news__item">
                        <a href="#" class="medicine-news__item-img category-news__item-img category-news__item-img--small">
                            <img class="img-fluid" src="@AppHelpers.TopicImage(topic.LinkImage, topic.User.Id, 360, 250)" alt="">
                        </a>
                        <div class="medicine-news__item-text category-news__item-text">
                            <div class="medicine-news__item-text-title category-news__item-text-title">
                                <a href="#">@topic.Name</a>
                            </div>
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <span>@DatesUI.GetPrettyDate(topic.CreateDate.ToString())</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    if (Model.Topics.Count > 0)
    {
        <a href="@Url.Action("ScientificList","Home")" class="btn btn__main float-right">Xem thêm</a>
    }
}