@model MVCForum.Website.ViewModels.MemberAddViewModel
@{
    Layout = "~/Views/Shared/Frontend/_LayoutBenhvien.cshtml";
}

@*@if (!User.Identity.IsAuthenticated)
{*@
    @if (Html.Settings().DisableStandardRegistration != true)
    {
        <section class="register pt-0 pb-3">
            <div class="container-fluid">
                <div class="row">
                    <div class="banner-sub col-12">
                        <div class="banner-sub__overlay"></div>
                        <div class="container">

                            <div class="section__title section__title-page">
                                <h2 class="section__title-text">Đăng ký</h2>
                                <div class="section__title-icon"></div>
                            </div>
                        </div>
                    </div>
                    <div class="container page-container">
                        <div>
                            <nav aria-label="breadcrumb" class="breadcrumb-custom col-12">
                                <ol class="breadcrumb breadcrumb-custom-ol">
                                    <li class="breadcrumb-item breadcrumb-custom-item"><a href="#"><i class="fa fa-home" aria-hidden="true"></i></a></li>
                                    @*<li class="breadcrumb-item breadcrumb-custom-item"><a href="#">Đường dẫn 1</a></li>*@
                                    <li class="breadcrumb-item active breadcrumb-custom-item" aria-current="page">Đăng ký</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="modal-dialog drop-1" role=" document">
                            <div class="modal-content">
                                <div class="modal-header modal-header__custom">
                                    <div class="item__title w-100 text-center">
                                        <p class="login__title mb-2">ĐĂNG KÝ</p>
                                    </div>
                                </div>
                                @using (Html.BeginForm("Register", "Members", FormMethod.Post, new { @class = "form-container" }))
                                {
                                    @Html.ValidationSummary("", new { @class= "text__stress--red" })
                                    @Html.AntiForgeryToken()
                                    <div class="modal-body">
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label class="text__stress" for="UserName">Họ và tên</label>
                                                @Html.TextBoxFor(x => Model.FullName, new { type = "text", @class = "form-control", @placeholder = "Họ và tên" })
                                                @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text__stress--red" })
                                            </div>
                                            <div class="form-group">
                                                <label class="text__stress" for="UserName">Tên đăng nhập</label>
                                                @Html.TextBoxFor(x => Model.UserName, new { type = "text", @class = "form-control", @placeholder = "Tên đăng nhập" })
                                                @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text__stress--red" })
                                            </div>
                                            <div class="form-group">
                                                <label class="text__stress" for="exampleInputPassword1">Mật khẩu</label>
                                                @Html.PasswordFor(x => Model.Password, new { type = "password", @class = "form-control", @placeholder = "Mật khẩu" })
                                                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text__stress--red" })
                                            </div>
                                            <div class="form-group">
                                                <label class="text__stress" for="exampleInputPassword1">Nhập lại mật khẩu</label>
                                                @Html.PasswordFor(x => Model.ConfirmPassword, new { type = "password", @class = "form-control", @placeholder = "Nhập lại mật khẩu" })
                                                @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text__stress--red" })
                                            </div>
                                            <div class="form-group">
                                                <label class="text__stress" for="exampleInputEmail1">Email</label>
                                                @Html.TextBoxFor(x => x.Email, new { type = "email", @class = "form-control", @placeholder = "Email" })
                                                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text__stress--red" })
                                            </div>
                                            @if (!string.IsNullOrEmpty(Html.Settings().SpamQuestion))
                                            {
                                            <div class="form-group">
                                                <label for="SpamAnswer">@Html.Settings().SpamQuestion</label>
                                                @Html.TextBoxFor(x => x.SpamAnswer, new { @class = "form-control" })
                                            </div>
                                            }
                                            @Html.HiddenFor(x => x.ReturnUrl)
                                        </div>
                                    </div>
                                    <div class="modal-footer justify-content-start">
                                        <button type="submit" class="btn btn__main form__submit ml-3">Đăng ký</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
@*}
else
{
    <p>@Html.LanguageString("Members.AlreadyRegistered")</p>
}*@