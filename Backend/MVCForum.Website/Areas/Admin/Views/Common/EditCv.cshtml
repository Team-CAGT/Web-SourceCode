@model MVCForum.Website.Areas.Admin.ViewModels.AdminApplyCvViewModel
@{
    ViewBag.Title = "Trả lời hồ sơ tuyển dụng";
}

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("EditCv", "Common", FormMethod.Post))
        {
            @Html.HiddenFor(x => Model.Id)

            @Html.ValidationSummary(false)


            <div class="form-group">
                <label>Họ và tên </label>
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", disabled="disable" })
            </div>

            <div class="form-group">
                <label>Địa chỉ </label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control", disabled = "disable" })
                @Html.ValidationMessageFor(x => x.Address)
            </div>

            <div class="form-group">
                <label>Email </label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", disabled = "disable" })
            </div>

            <div class="form-group">
                <label>Điện thoại </label>
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", disabled = "disable" })
            </div>

            <div class="form-group">
                <label>Trình độ chuyên môn </label>
                @Html.TextBoxFor(x => x.Qualification, new { @class = "form-control", disabled = "disable" })
            </div>


            <div class="form-group">
                <label>Vị trí ứng tuyển </label>
                @Html.TextBoxFor(x => x.PositionName, new { @class = "form-control", disabled = "disable" })
            </div>

            <div class="form-group">
                <label>Hồ sơ </label>
                @if (!string.IsNullOrEmpty(Model.FileUrl))
                {
                    var i = 0;
                    foreach (var file in Model.FileUrl.Split(';'))
                    {
                        i++;
                        <a href="@file" class="btn-mvc-blue">Tải tập tin thứ @i</a>
                    }
                }
                else
                {
                    <a href="@Model.FileUrl" class="btn-mvc-blue">Tải File </a>
                }
            </div>
            <div class="form-group">
                <label>Hình ảnh các chứng chỉ </label>
                @if (!string.IsNullOrEmpty(Model.HinhAnhChungChi))
                {
                    var j = 0;
                    foreach (var img in Model.HinhAnhChungChi.Split(';'))
                    {
                        j++;
                        <a href="@img" target="_blank" class="btn-mvc-blue">Xem hình thứ @j</a>
                    }
                }
                else
                {
                    <a href="@Model.HinhAnhChungChi" target="_blank" class="btn-mvc-blue"> Xem hình </a>
                }
            </div>
            <div class="form-group">
                <label>Nội dung phản hồi </label>
                <div class="editor-field editorholder">
                    @Html.EditorFor(model => model.ReplyContent)
                    @Html.ValidationMessageFor(model => model.ReplyContent)
                </div>
            </div>

            <div class="submit-holder">
                <input type="submit" class="btn-mvc-green" value="Cập nhật" />

            </div>
        }


    </div>
</div>