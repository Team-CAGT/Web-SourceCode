@model MVCForum.Website.Areas.Admin.ViewModels.UploadHospitalFeeViewModel
@{
    ViewBag.Title = "Edit File";
}



<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("UploadHospitalFee", "Common", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()

            <div class="row">

                <div class="form-group ">
                    @Html.LabelFor(model => model.FileName)
                    @Html.TextAreaFor(model => model.FileName, new { @class = "form-control", row = 3 })
                    @Html.ValidationMessageFor(model => model.FileName)
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="type" value="@Model.Type" />
                </div>

                <div class="form-group">
                    <label for="">File</label>
                    <input type="file" name="files" class="form-control" placeholder=".col-md-4" />
                </div>
                <div class="submit-holder">
                    <input type="submit" class="btn-mvc-green btn-mvc-large" value="Cập nhật" />
                </div>
            </div>
        }
    </div>
</div>

