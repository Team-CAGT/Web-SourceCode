@using MVCForum.Domain.Constants
@using MVCForum.Website.Application.ExtensionMethods
@model MVCForum.Domain.DomainModel.Entities.Question


<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("EditQuestion", "Common", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => Model.Id)

            @Html.ValidationSummary(false)


            <div class="form-group">
                <label>Tên </label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group">
                <label>Độ tuổi </label>
                @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Age)
            </div>

            <div class="form-group">
                <label>Số điện thoại </label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Phone)
            </div>

            <div class="form-group">
                <label>Địa chỉ </label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Address)
            </div>

            <div class="form-group">
                <label>Email </label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                <label>Tên câu hỏi </label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Title)
            </div>

            <div class="form-group">
                <label>Nội dung câu hỏi </label>
                @Html.TextAreaFor(x => x.ContentQuestion, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ContentQuestion)
            </div>
            <div class="form-group">
                <label>Trả lời </label>
                @Html.TextAreaFor(x => x.ReplyContent, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ReplyContent)
            </div>
            <div class="form-element">
                <label>Chuyên mục </label>
                <select name="Chuyenmuc" >
                    <option>Chuyên Khoa</option>
                    <option>Hành Chính</option>
                    <option>Ngoại Khoa</option>
                    <option>Nhi Khoa</option>
                    <option>Nội Khoa</option>
                    <option>Sản Khoa</option>
                </select>


                @Html.ValidationMessageFor(model => model.Chuyenmuc, "", new { @class = "text-danger" })
            </div>
            <div class="submit-holder">
                <input type="submit" class="btn-mvc-green" value="Cập nhật" />

            </div>
        }


    </div>
</div>