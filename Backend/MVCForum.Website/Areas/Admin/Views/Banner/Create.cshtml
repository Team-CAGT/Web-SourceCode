@model MVCForum.Website.Areas.Admin.ViewModels.BannerViewModel
@{
    ViewBag.Title = "Tạo mới Banner";
}

@Html.Partial("_NavButtons")

<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("Create", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.Id)
            @Html.AntiForgeryToken()

            @Html.Partial("_FormFields", Model)

            <div class="submit-holder">
                <input type="submit" class="btn-mvc-green btn-mvc-large" value="Create" />
            </div>
        }

    </div>
</div>

